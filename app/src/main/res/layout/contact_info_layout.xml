<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/contactImageInfo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/random_contact_picture" />

    <TextView
        android:id="@+id/contactNameInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackTransparent"
        android:padding="4dp"
        android:text="Contact Name"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/contactButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactImageInfo"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="40">

        <ImageView
            android:id="@+id/video_call_contact_dialog_action"
            style="@style/dialog_action_icons"
            android:src="@drawable/ic_videocam" />

        <ImageView
            android:id="@+id/phone_call_contact_dialog_action"
            style="@style/dialog_action_icons"
            android:src="@drawable/ic_phone" />

        <ImageView
            android:id="@+id/message_contact_dialog_action"
            style="@style/dialog_action_icons"
            android:src="@drawable/ic_message" />

        <ImageView
            android:id="@+id/contact_details_dialog_action"
            style="@style/dialog_action_icons"
            android:src="@drawable/ic_info_outline" />
    </LinearLayout>
</RelativeLayout>